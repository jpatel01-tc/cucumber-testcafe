{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "sourceMap": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noResolve": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "cucumber",
      "testcafe"
    ],
    "lib": [
      "es6",
      "DOM"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "example-project"
  ]
}